<Window x:Class="CryptoTrackClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:CryptoTrackClient.Converters"
        mc:Ignorable="d"
        Title="CryptoTrackClient - Crypto Portfolio Tracker"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:ProfitLossColorConverter x:Key="ProfitLossColorConverter"/>
        <converters:PriceChangeColorConverter x:Key="PriceChangeColorConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barre de navigation -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Titre de l'application -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="â‚¿" FontSize="24" Foreground="#3498DB" Margin="0,0,10,0"/>
                    <TextBlock Text="CryptoTrackClient" FontSize="20" FontWeight="Bold" Foreground="White"/>
                </StackPanel>

                <!-- Boutons de navigation -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="ðŸ“Š Market" Command="{Binding ShowMarketCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowMarket}" Value="True">
                                        <Setter Property="Background" Value="#3498DB"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ’° Portfolio" Command="{Binding ShowPortfolioCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowPortfolio}" Value="True">
                                        <Setter Property="Background" Value="#3498DB"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ’± Converter" Command="{Binding ShowConverterCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowConverter}" Value="True">
                                        <Setter Property="Background" Value="#3498DB"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- RÃ©sumÃ© du portefeuille -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Portfolio Value" Foreground="#BDC3C7" FontSize="11"/>
                        <TextBlock Text="{Binding PortfolioValue, StringFormat={}{0:C2}}" Foreground="White" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="P/L" Foreground="#BDC3C7" FontSize="11"/>
                        <TextBlock Foreground="{Binding PortfolioProfitLoss, Converter={StaticResource ProfitLossColorConverter}}" FontSize="14" FontWeight="Bold">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:C2} ({1:F2}%)">
                                    <Binding Path="PortfolioProfitLoss"/>
                                    <Binding Path="PortfolioProfitLossPercentage"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Statut API et rafraÃ®chissement -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#34495E" CornerRadius="15" Padding="10,5">
                        <TextBlock Text="{Binding ActiveApi}" Foreground="White" FontSize="12"/>
                    </Border>

                    <Button Content="ðŸ”„" Command="{Binding RefreshCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,0,0,0" Width="40"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <!-- Overlay de chargement -->
            <Border Background="#80000000" 
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                    Panel.ZIndex="1000">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="6" Style="{StaticResource ModernProgressBarStyle}"/>
                    <TextBlock Text="Loading..." Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Vue MarchÃ© -->
            <Border Visibility="{Binding ShowMarket, Converter={StaticResource BoolToVisibilityConverter}}" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Barre de recherche et filtres -->
                    <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Search cryptocurrency..."
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Margin="0,0,10,0"/>

                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding AvailableApis}"
                                      SelectedItem="{Binding ActiveApi, Mode=TwoWay}"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      Width="150"
                                      Margin="0,0,10,0"/>

                            <Button Grid.Column="2" Content="â­ Favorites" Command="{Binding ShowFavoritesCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Liste des crypto-monnaies -->
                    <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="0">
                        <DataGrid ItemsSource="{Binding FilteredCurrencies}" 
                                  SelectedItem="{Binding SelectedCrypto}" 
                                  Style="{StaticResource DataGridStyle}" 
                                  AutoGenerateColumns="False" 
                                  RowHeight="40">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="â­"
                                                    Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding Id}"
                                                    Background="Transparent"
                                                    BorderThickness="0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Foreground" Value="#BDC3C7"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                <Setter Property="Foreground" Value="#FFD700"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="#" Binding="{Binding Rank}" Width="60"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="80"/>
                                <DataGridTextColumn Header="Price" Binding="{Binding CurrentPrice, StringFormat={}{0:C2}}" Width="100"/>

                                <DataGridTextColumn Header="24h Change" Width="120">
                                    <DataGridTextColumn.Binding>
                                        <MultiBinding StringFormat="{}{0:C2} ({1:F2}%)">
                                            <Binding Path="PriceChange24h"/>
                                            <Binding Path="PriceChangePercentage24h"/>
                                        </MultiBinding>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="{Binding PriceChange24h, Converter={StaticResource PriceChangeColorConverter}}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Market Cap" Binding="{Binding MarketCap, StringFormat={}{0:C0}}" Width="120"/>
                                <DataGridTextColumn Header="24h Volume" Binding="{Binding Volume24h, StringFormat={}{0:C0}}" Width="120"/>

                                <DataGridTemplateColumn Header="Actions" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ“ˆ Chart"
                                                    Command="{Binding DataContext.ShowChartCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding Id}"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Padding="8,4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Border>

            <!-- Vue Portfolio (aperÃ§u simplifiÃ©) -->
            <Border Visibility="{Binding ShowPortfolio, Converter={StaticResource BoolToVisibilityConverter}}" 
                    Margin="20" Background="White" CornerRadius="5" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Portfolio Overview" Style="{StaticResource TitleTextStyle}"/>

                    <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,15">
                        <Border Background="#ECF7FF" CornerRadius="5" Padding="12" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Total Value" Foreground="#5D6D7E" FontSize="12"/>
                                <TextBlock Text="{Binding PortfolioValue, StringFormat={}{0:C2}}" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#F0FFF4" CornerRadius="5" Padding="12" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Profit / Loss" Foreground="#5D6D7E" FontSize="12"/>
                                <TextBlock FontSize="20" FontWeight="Bold" Foreground="{Binding PortfolioProfitLoss, Converter={StaticResource ProfitLossColorConverter}}">
                                    <Run Text="{Binding PortfolioProfitLoss, StringFormat={}{0:C2}}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Background="#F6F9FC" CornerRadius="5" Padding="12">
                            <StackPanel>
                                <TextBlock Text="Change %" Foreground="#5D6D7E" FontSize="12"/>
                                <TextBlock FontSize="20" FontWeight="Bold" Foreground="{Binding PortfolioProfitLoss, Converter={StaticResource ProfitLossColorConverter}}">
                                    <Run Text="{Binding PortfolioProfitLossPercentage, StringFormat={}{0:F2}%}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <Border Grid.Row="2" BorderBrush="#ECF0F1" BorderThickness="1" CornerRadius="5" Padding="14">
                        <TextBlock Text="Track buy/sell transactions from the Portfolio tool and this summary will update automatically."
                                   Foreground="#7F8C8D" TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Vue Convertisseur (simplifiÃ©) -->
            <Border Visibility="{Binding ShowConverter, Converter={StaticResource BoolToVisibilityConverter}}" 
                    Margin="20" Background="White" CornerRadius="5" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Currency Converter" Style="{StaticResource TitleTextStyle}"/>

                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding AmountToConvert, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding FiatCurrencies}" SelectedItem="{Binding SelectedFromCurrency}" DisplayMemberPath="Code" Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,10,0"/>
                        <Button Grid.Column="2" Content="â‡„" Command="{Binding SwapCurrenciesCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0" Width="45"/>
                        <ComboBox Grid.Column="3" ItemsSource="{Binding FiatCurrencies}" SelectedItem="{Binding SelectedToCurrency}" DisplayMemberPath="Code" Style="{StaticResource ModernComboBoxStyle}"/>
                    </Grid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="Convert" Command="{Binding ConvertCurrencyCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,12,0"/>
                        <TextBlock VerticalAlignment="Center" Foreground="#5D6D7E">
                            <Run Text="Rate: 1 "/><Run Text="{Binding SelectedFromCurrency.Code}"/><Run Text=" = "/>
                            <Run Text="{Binding ExchangeRate, StringFormat={}{0:F4}}"/><Run Text=" "/><Run Text="{Binding SelectedToCurrency.Code}"/>
                        </TextBlock>
                    </StackPanel>

                    <Border Grid.Row="3" Margin="0,15,0,0" Background="#F8FAFC" CornerRadius="5" Padding="16">
                        <TextBlock FontSize="26" FontWeight="Bold" Foreground="#2C3E50">
                            <Run Text="{Binding ConvertedAmount, StringFormat={}{0:N4}}"/><Run Text=" "/><Run Text="{Binding SelectedToCurrency.Code}"/>
                        </TextBlock>
                    </Border>
                </Grid>
            </Border>

            <!-- Vue Graphique -->
            <Border Visibility="{Binding ShowChart, Converter={StaticResource BoolToVisibilityConverter}}" 
                    Background="White" CornerRadius="5" Margin="20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#3498DB" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="{Binding SelectedCrypto.Name, StringFormat={}{0} Price Chart}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedCrypto.CurrentPrice, StringFormat=Current Price: {0:C2}}" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                            </StackPanel>

                            <Button Grid.Column="1" Content="â† Back" Command="{Binding BackCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" BorderBrush="#ECF0F1" BorderThickness="1" CornerRadius="5" Padding="10">
                        <DataGrid ItemsSource="{Binding PriceHistory}" Style="{StaticResource DataGridStyle}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="*"/>
                                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:C4}}" Width="160"/>
                                <DataGridTextColumn Header="Volume" Binding="{Binding Volume, StringFormat={}{0:N0}}" Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="1D" Command="{Binding ShowDayChartCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,5,0"/>
                        <Button Content="7D" Command="{Binding ShowWeekChartCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0"/>
                        <Button Content="30D" Command="{Binding ShowMonthChartCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Barre d'Ã©tat -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="CryptoTrackClient v2.0 - Crypto Portfolio Tracker" Foreground="#BDC3C7" FontSize="12" Margin="0,0,15,0"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="#D6EAF8" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Auto-refresh: " Foreground="#BDC3C7" FontSize="12" Margin="0,0,5,0"/>
                    <CheckBox IsChecked="{Binding AutoRefreshEnabled}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>